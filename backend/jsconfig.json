{
  "compilerOptions": {
    "module": "ESNext",
    "moduleResolution": "node",
    "target": "ES2020",
    "lib": ["ES2020"],
    "checkJs": false,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "types": ["node"]
  },
  "typeAcquisition": {
    "enable": true,
    "include": ["node"]
  },
  "include": ["**/*.js"],
  "exclude": ["node_modules"]
}

